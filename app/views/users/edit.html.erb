<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <%= render 'validates_messages_user', user: @user %>
      
      <%= form_with model: @user do |f| %>
        
        <div class="form-group">
          <label for="user-name">Name</label><br>
          <%= f.text_field :name, id:"user_name", class:"form-control name"%>
        </div>
        <div class="form-group">
          <label for="user-image">Image</label><br>
          <%= f.file_field :profile_image, id:"user_profile_image", class:"form-control-file user_image"%>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, id:"user_introduction", class:"form-control introduction"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>